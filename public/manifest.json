{
  "manifest_version": 3,
  "name": "web-markdown-clipper",
  "version": "1.0.0",
  "author": "liuqiming",
  "description": "get part of web page as clip in markdown format",
  "icons": {
    "16": "icons/favicon-16x16.png",
    "32": "icons/favicon-32x32.png",
    "192": "icons/favicon-192x192.png",
    "512": "icons/favicon-512x512.png"
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "activeTab",
    "downloads",
    "storage",
    "contextMenus",
    "clipboardWrite",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "service/background.js"
  },
  "action": {
    "default_title": "web-markdown-clipper",
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/favicon-16x16.png",
      "32": "icons/favicon-32x32.png",
      "192": "icons/favicon-192x192.png",
      "512": "icons/favicon-512x512.png"
    }
  },
  "options_page": "options.html",
  "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["./static/js/content.js"]
    }
 ],
  "commands": {
    "download_selection_as_markdown": {
      "suggested_key": {
        "default": "Ctrl+D",
        "mac": "MacCtrl+D"
      },
      "description": "Download Selection as Markdown"
    }
  }
}